      }        

    </style>
    <script type="text/javascript">
        $(document).ready(function() {
            $('.auction-btn').click(function(){
                var last_price = $('.last_price').html();
                var price = prompt("가격을 적어주세요", last_price);
                if(price != null) {
                    if(price <= last_price) {
                        alert('현재가보다 큰 금액을 적어주세요');
                    } else {
                        $('.last_price').html(price);
                    }
                }
              
            }); 
        });
    </script>
   
</head>

<body>
   
        <div class="content-div">
           
